<airplane mass="3700">

    <approach speed="77" aoa="0" fuel="1">
        <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
        <control-setting axis="/controls/engines/engine[1]/throttle" value="0.2"/>
